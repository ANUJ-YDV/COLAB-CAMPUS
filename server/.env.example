# ===================================
# COLAB CAMPUS - Environment Variables Template
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to Git!

# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=5000
NODE_ENV=development

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Local MongoDB (for development)
# MONGO_URI=mongodb://localhost:27017/colab-campus

# MongoDB Atlas (cloud database)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/<dbname>?retryWrites=true&w=majority

# Testing Database
MONGO_URI_TEST=mongodb://localhost:27017/colab-campus-test

# ===================================
# AUTHENTICATION
# ===================================
# IMPORTANT: Generate a secure random string for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_long_random_jwt_secret_here_minimum_64_characters_for_production

# ===================================
# AWS S3 CONFIGURATION
# ===================================
# Get these from AWS Console > IAM > Users > Security Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=collabcampus-storage

# ===================================
# GITHUB INTEGRATION (Optional)
# ===================================
# Generate at: https://github.com/settings/tokens
# Required scopes: repo (for private repos), public_repo (for public repos)
GITHUB_TOKEN=your_github_personal_access_token_optional

# ===================================
# CORS & FRONTEND CONFIGURATION
# ===================================
# Development
FRONTEND_URL=http://localhost:3000
CLIENT_ORIGIN=http://localhost:3000
SOCKET_CORS_ORIGIN=http://localhost:3000

# Production (uncomment and update when deploying)
# FRONTEND_URL=https://your-app.vercel.app
# CLIENT_ORIGIN=https://your-app.vercel.app
# SOCKET_CORS_ORIGIN=https://your-app.vercel.app
